@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ModMail LogViewer</title>
    <link href="~/fontawesome/css/all.css" rel="stylesheet">
</head>
<body>

<div class="navbar">
    <a href="~/" id="nav-home-anchor">
        <i class="fas fa-home nav-home-icon"></i>
    </a>
    <img src="@(User.Claims?.Any() ?? false ? ("https://cdn.discordapp.com/avatars/" + User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.NameIdentifier)?.Value + "/" + User.Claims.FirstOrDefault(x => x.Type == ClaimTypes.Hash)?.Value) : "../astral-logo.png")" id="avatar-button" alt="Avatar"/>
</div>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<style>
.navbar {
    background-color: #323335;
    border-bottom: 1px solid #323335;
    width: 100%;
    height: 10%;
}
.nav-home-icon {
    color: #fff;
    font-size: 1.5em;
    margin-left: 10px;
    margin-top: 10px;
    margin-bottom: 10px;
    background-color: #323335;
    vertical-align: top;
}

#avatar-button {
    position: absolute;
    right: 15px;
    background-color: #323335;
    height: 40px;
    width: 40px;
}

#nav-home-anchor {
    text-decoration: none;
    background-color: #323335;
}
</style>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>